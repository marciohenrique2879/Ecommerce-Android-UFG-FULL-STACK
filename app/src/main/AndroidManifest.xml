<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="danielfnz.com.br.ecommerce">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_compras"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_compras"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.CompraEfetuadaActivity"></activity>

        <activity android:name=".activity.CarrinhoActivity" />
        <activity android:name=".activity.ScannerActivity" />

        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />

        <activity android:name=".activity.Ecommerce">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ProductDescription"
            android:label="@string/title_activity_product_description"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>